<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.baseio.kmm.android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PraxisApp"
        android:allowBackup="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="donut"
        android:label="@string/title_activity_trending_repos_ui"
        tools:ignore="RtlEnabled">
        <activity
            android:name=".TrendingReposUI"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".ui.appWidget.TrendingReposWidgetReceiver"
            android:enabled="true" android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/trending_repos_widget_info"/>
        </receiver>
    </application>

</manifest>